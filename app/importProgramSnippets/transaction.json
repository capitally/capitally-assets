{
  "id": "import-transaction",
  "name": "Transaction",
  "stmts": [
    {
      "type": "addTransaction",
      "stmts": [
        {
          "type": "comment",
          "md": "ðŸŒ± Some properties are optional and can be skipped or removed."
        },
        {
          "type": "set",
          "prop": "transaction.account",
          "xpr": {
            "type": "placeholder",
            "value": null,
            "placeholder": "Account",
            "valueLink": "Select account",
            "valueType": "account"
          }
        },
        {
          "type": "set",
          "prop": "transaction.asset",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Asset",
            "propType": "asset",
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Select asset",
            "valueType": "asset"
          },
          "cast": {
            "asset": {
              "markets": {
                "type": "placeholder",
                "value": null,
                "placeholder": "Search for assets only on these markets",
                "valueLink": "Select markets to search assets in",
                "valueType": "market",
                "removeLink": { "levels": 0 },
                "multiple": true
              },
              "remote": { "type": "value", "value": true }
            }
          }
        },
        {
          "type": "set",
          "prop": "transaction.type",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Transaction Type",
            "propType": "transaction.type",
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Select type",
            "valueType": "transactionType"
          }
        },
        {
          "type": "set",
          "prop": "transaction.date",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Transaction Date",
            "propType": "transaction.date",
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Enter date",
            "valueType": "dateTime"
          }
        },
        {
          "type": "set",
          "prop": "transaction.fee",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Transaction Fee",
            "propType": "transaction.fee",
            "value": 0,
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Enter fee",
            "valueType": "number",
            "removeLink": {
              "levels": 1
            }
          },
          "trfms": [{ "type": "abs" }]
        },
        {
          "type": "set",
          "prop": "transaction.valueCurrency",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Value Currency",
            "propType": "transaction.valueCurrency",
            "value": null,
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Select currency",
            "valueType": "currency",
            "removeLink": {
              "levels": 1
            }
          }
        },
        {
          "type": "set",
          "prop": "transaction.feeCurrency",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Fee Currency",
            "propType": "transaction.feeCurrency",
            "value": null,
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Select currency",
            "valueType": "currency",
            "removeLink": {
              "levels": 1
            }
          }
        },
        {
          "type": "set",
          "prop": "transaction.taxPaid",
          "xpr": {
            "type": "placeholder",
            "placeholder": "Tax Paid",
            "propType": "transaction.taxPaid",
            "value": null,
            "propsLink": { "label": "Select column", "matchProp": "~cols.~^" },
            "valueLink": "Enter tax",
            "valueType": "number",
            "removeLink": {
              "levels": 1
            }
          },
          "trfms": [{ "type": "abs" }]
        },
        {
          "type": "if",
          "ifs": [
            {
              "xpr": {
                "type": "in",
                "xpr": { "type": "prop", "prop": "transaction.type" },
                "v": { "type": "value", "value": ["OPEN", "CLOSE"] }
              },
              "stmts": [
                {
                  "type": "comment",
                  "md": "ðŸ¦‰ If you're importing Buy & Sell transactions, then set quantity and price."
                },
                {
                  "type": "set",
                  "prop": "transaction.qty",
                  "xpr": {
                    "type": "placeholder",
                    "placeholder": "Buy/Sell Quantity",
                    "propType": "transaction.qty",
                    "propsLink": {
                      "label": "Select column",
                      "matchProp": "~cols.~^"
                    },
                    "valueType": "number"
                  },
                  "trfms": [{ "type": "abs" }]
                },
                {
                  "type": "set",
                  "prop": "transaction.price",
                  "xpr": {
                    "type": "placeholder",
                    "placeholder": "Buy/Sell Price",
                    "propType": "transaction.price",
                    "propsLink": {
                      "label": "Select column",
                      "matchProp": "~cols.~^"
                    },
                    "valueType": "number"
                  }
                }
              ]
            },
            {
              "xpr": {
                "type": "in",
                "xpr": { "type": "prop", "prop": "transaction.type" },
                "v": {
                  "type": "value",
                  "value": ["DIVIDEND", "INTEREST", "RENT", "OTHER"]
                }
              },
              "stmts": [
                {
                  "type": "comment",
                  "md": "ðŸ’° If you're importing Dividend, Interest, Rent & Other transactions, then set their value."
                },
                {
                  "type": "set",
                  "prop": "transaction.value",
                  "xpr": {
                    "type": "placeholder",
                    "placeholder": "Income Value",
                    "value": null,
                    "propType": "transaction.value",
                    "propsLink": {
                      "label": "Select column",
                      "matchProp": "~cols.~^"
                    },
                    "valueType": "number",
                    "removeLink": {
                      "levels": 2
                    }
                  }
                }
              ]
            },
            {
              "stmts": [
                {
                  "type": "return"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
