{
  "id": "import-price-history",
  "name": "Balance & price history",
  "stmts": [
    {
      "type": "comment",
      "md": "ðŸ¦‰ Note that you may only set market prices for assets that are **already in the project**."
    },
    {
      "type": "setMarketPrice",
      "asset": {
        "type": "placeholder",
        "placeholder": "Asset",
        "propType": "asset",
        "propsLink": {
          "label": "Select asset column",
          "matchProp": "~cols.~^"
        },
        "valueLink": "Select asset",
        "valueType": "asset"
      },
      "date": {
        "type": "placeholder",
        "placeholder": "Date",
        "propType": "transaction.date",
        "propsLink": {
          "label": "Select date column",
          "matchProp": "~cols.~^"
        },
        "valueLink": "Enter date",
        "presetLinks": [
          {
            "label": "Today",
            "xpr": { "type": "formula", "formula": "=Date.now()" }
          },
          {
            "label": "Yesterday",
            "xpr": {
              "type": "formula",
              "formula": "=Date.addDays(Date.today(), -1)"
            }
          }
        ],
        "valueType": "date"
      },
      "price": {
        "type": "placeholder",
        "placeholder": "Market Price",
        "propType": "transaction.marketPrice",
        "propsLink": {
          "label": "Select price column",
          "matchProp": "~cols.~^"
        },
        "valueLink": "Enter price",
        "valueType": "number"
      }
    }
  ]
}
